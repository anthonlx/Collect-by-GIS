<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_marginBottom="2dip"
  android:layout_height="wrap_content">
  
<LinearLayout
android:orientation="horizontal" android:gravity="right" android:layout_gravity="right"
  android:layout_width="fill_parent" android:layout_centerVertical="true" android:layout_alignParentRight="true"
  android:layout_height="wrap_content">
    <Button android:text="Layer" android:id="@+id/esri_androidviewer_search_ButtonLayer" 
	android:layout_width="wrap_content" android:layout_gravity="center"
	android:layout_height="wrap_content" android:layout_marginRight="5dip" />
	<Button android:text="Attribute" android:id="@+id/esri_androidviewer_search_ButtonAttribute" 
	android:layout_width="wrap_content" android:layout_gravity="center"
	android:layout_height="wrap_content" android:layout_marginRight="5dip" />
	<Button android:text="Result" android:id="@+id/esri_androidviewer_search_ButtonResult" 
	android:layout_width="wrap_content" android:layout_gravity="center"
	android:layout_height="wrap_content" android:layout_marginRight="5dip" />
	<Button android:id="@+id/esri_androidviewer_search_ButtonClear" android:text="Clear"
	    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"
	    android:gravity="center" android:layout_marginRight="10dip"/>
</LinearLayout>
<LinearLayout android:layout_centerVertical="true" android:layout_alignParentLeft="true"
android:orientation="horizontal" android:gravity="right" android:visibility="gone"
  android:layout_width="fill_parent"  android:layout_height="wrap_content">
		<ImageView android:id="@+id/esri_androidviewer_search_ImageViewCircle"  
		android:layout_marginRight="10dip"
		android:layout_width="wrap_content" android:src="@drawable/esri_androidviewer_drawable_circle" android:layout_marginLeft="10dip"
	    android:layout_height="wrap_content" android:layout_gravity="center"/>
	 
	    <ImageView android:id="@+id/esri_androidviewer_search_ImageViewRectangle"  android:layout_width="wrap_content" android:src="@drawable/esri_androidviewer_drawable_rectangle" android:layout_marginLeft="10dip"
	    android:layout_height="wrap_content" android:layout_gravity="center"/>

</LinearLayout>


</RelativeLayout>


