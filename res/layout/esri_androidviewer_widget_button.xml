<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/esri_androidviewer_widget_button_LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/esri_androidviewer_drawable_widget_bg_blank"
            android:minWidth="36dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/esri_androidviewer_widget_button_ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dip"
                android:layout_marginRight="1dip"
                android:src="@drawable/default_widget_icon" />

            <TextView
                android:id="@+id/esri_androidviewer_widget_button_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="0dip"
                android:maxWidth="75dip"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:text="Widget"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
