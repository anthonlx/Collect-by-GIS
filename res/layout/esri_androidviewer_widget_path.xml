<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/path_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/esri_androidviewer_colors_bgcolor" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_sample_point_camera_txtlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="添加:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/imageViewLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/esri_androidviewer_drawable_polyline" />

            <ImageView
                android:id="@+id/imageViewFreeLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/esri_androidviewer_drawable_freeline" />

            <ImageView
                android:id="@+id/imageViewClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/esri_androidviewer_drawable_i_clear" />

        </LinearLayout>

        <TextView
            android:id="@+id/esri_androidviewer_draw_TxtScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="线路列表"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/esri_androidviewer_colors_white"
        android:orientation="vertical" >

    </LinearLayout>

    <ListView
        android:id="@+id/listView_path"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </ListView>

</LinearLayout>