<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_marginBottom="2dip"
  android:layout_height="wrap_content">
  
<Button android:text="Result" android:id="@+id/esri_androidviewer_query_ButtonResult" 
	android:layout_width="wrap_content" android:layout_gravity="center" android:layout_alignParentLeft="true"
	android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:layout_marginRight="5dip"/>

<Button android:text="Query" android:id="@+id/esri_androidviewer_query_ButtonQuery" 
android:layout_alignParentRight="true" 
android:layout_width="wrap_content" android:layout_gravity="center"
android:layout_height="wrap_content" android:layout_marginRight="5dip"/>

<EditText android:id="@+id/esri_androidviewer_query_EditText" android:layout_gravity="center"
android:singleLine="true" android:layout_weight="1"
android:layout_height="wrap_content" 
android:layout_width="wrap_content" android:layout_marginRight="5dip"
android:layout_toLeftOf="@+id/esri_androidviewer_query_ButtonQuery"
android:layout_toRightOf="@+id/esri_androidviewer_query_ButtonResult"/>


</RelativeLayout>